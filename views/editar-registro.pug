extends ./layouts/index

block contenido

    main.container.mt-3
        .row 
            .row.justify-content-center.col
                if alertas
                    each alerta in alertas
                        .alert.alert-success.text-center=alerta.mensajeExito

                .d-flex.justify-content-center
                    .col-md-4 

                        p.my-3.titulo_intermedio Datos Catastrales
            
                            form#datos(action=`${dato.id}` method="POST")

                                .form-group
                                    label(for="padron") Padron 
                                    input#padron.mb-2(type="text" placeholder="Numero de Padron"
                                    value=dato.padron name="padron" class="form-control")
                                
                                .form-group
                                    label(for="matricula") Matricula 
                                    input#matricula.mb-2(type="text" placeholder="Matricula"
                                    value=dato.matricula name="matricula" class="form-control")
                                
                                .form-group
                                    label(for="propietario") Propietario 
                                    input#propietario.mb-2(type="text" placeholder="Nombre de Propietario"
                                    value=dato.propietario name="propietario" class="form-control")

                                .form-group
                                    label(for="domicilio") Domicilio
                                    input#domicilio.mb-2(type="text" placeholder="Domicilio"
                                    value=dato.domicilio name="domicilio" class="form-control")
                                
                                .form-group
                                    label(for="responsable_fiscal") Responsable Fiscal 
                                    input#responsable_fiscal.mb-4(type="text" placeholder="Responsable Fiscal"
                                    value=dato.responsable_fiscal name="responsable_fiscal" class="form-control")
                                
                                p.my-3.titulo_intermedio datos Urbanos
                                .form-group         

                                    label(for="Cloacas") Cloacas
                                    input#cloacas.mb-2(type="text" placeholder="cloacas" value=cloacas
                                        name="cloacas" class="form-control")
                                
                                    label(for="gas") gas 
                                    input#gas.mb-2(type="text" placeholder="gas" value=gas
                                        name="gas" class="form-control")
                                
                                    label(for="agua") agua 
                                    input#agua.mb-2(type="text" placeholder="agua" value=agua
                                        name="agua" class="form-control")
                                
                                    label(for="alumbrado") alumbrado 
                                    input#alumbrado.mb-2(type="text" placeholder="alumbrado" value=alumbrado
                                        name="alumbrado" class="form-control")

                                .form-group
                                    label(for="accesibilidad") accesibilidad
                                    input#accesibilidad.mb-2(type="text" placeholder="accesibilidad" value=dato.accesibilidad
                                        name="accesibilidad" class="form-control")


                                .form-group
                                    label(for="comisarias") Comisarias 
                                    input#comisarias.mb-2(type="text" placeholder="Comisarias" value=dato.comisarias
                                        name="comisarias" class="form-control")

                                .form-group
                                    label(for="salud") Salud 
                                    input#salud.mb-2(type="text" placeholder="Centros de Salud" value=dato.salud
                                        name="salud" class="form-control")

                                .form-group
                                    label(for="deporte") Deportes
                                    input#deporte.mb-2(type="text" placeholder="Deportes" value=dato.deporte
                                        name="deporte" class="form-control")

                                .form-group
                                    label(for="maternal") Jardines Maternales 
                                    input#maternal.mb-2(type="text" placeholder="Jardines Maternales" value=dato.maternal
                                        name="maternal" class="form-control")

                                .form-group
                                    label(for="nivel_inicial") Escuelas Nivel Inicial
                                    input#nivel_inicial.mb-2(type="text" placeholder="Escuelas Nivel Inicial" value=dato.nivel_inicial
                                        name="nivel_inicial" class="form-control")

                                .form-group                   
                                    label(for="primario") Escuelas Nivel Primario 
                                    input#primario.mb-2(type="text" placeholder="Escuelas Nivel Primario" value=dato.primario
                                        name="primario" class="form-control")

                                .form-group                 
                                    label(for="secundario") Escuelas Nivel Secundario
                                    input#secundario.mb-2(type="text" placeholder="Escuelas Nivel Secundario" value=dato.secundario
                                        name="secundario" class="form-control")

                                .form-group              
                                    label(for="terciarios") Terciarios 
                                    input#terciarios.mb-4(type="text" placeholder="Terciarios" value=dato.terciarios
                                        name="terciarios" class="form-control")
                                
                                
                                p.my-3.titulo_intermedio datos Ambientales
                                .form-group    
                                    label(for="pasivo_urbano") Pasivos Urbanos
                                    input#pasivo_urbano.mb-2(type="text" placeholder="Pasivos Urbanos" value=dato.pasivo_urbano
                                        name="pasivo_urbano" class="form-control")
                                
                                .form-group    
                                    label(for="industrias") Industrias 
                                    input#industrias.mb-2(type="text" placeholder="Industrias" value=dato.industrias
                                        name="industrias" class="form-control")
                                
                                .form-group    
                                    label(for="contaminantes") Contaminantes 
                                    input#contaminantes.mb-2(type="text" placeholder="Contaminantes" value=dato.contaminantes
                                        name="contaminantes" class="form-control")
                                
                                .form-group    
                                    label(for="planes_urbanos") Planes Urbanos 
                                    input#planes_urbanos.mb-2(type="text" placeholder="Planes Urbanos" value=dato.planes_urbanos
                                        name="planes_urbanos" class="form-control")
                                
                                .form-group
                                    label(for="programas") Programas 
                                    input#programas.mb-2(type="text" placeholder="Programas"
                                    value=dato.programas name="programas" class="form-control")

                                .form-group    
                                    label(for="observaciones") Observaciones 
                                    textarea#observaciones.mb-4(type="text" placeholder="Observaciones"
                                    name="observaciones" class="form-control" cols="30", rows="5")=dato.observaciones

                                button.btn.btn-block.btn-success(onsubmit=`exito(${dato.id})` type='submit')
